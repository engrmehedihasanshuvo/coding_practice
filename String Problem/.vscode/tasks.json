{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated for building the active C++ file."
        },
        {
            "type": "shell",
            "label": "Simple C++ Build",
            "command": "g++",
            "args": [
                "\"${file}\"",
                "-o", 
                "\"${fileBasenameNoExtension}.exe\""
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "type": "shell",
            "label": "Build and Run C++",
            "command": "${workspaceFolder}\\build_and_run.bat",
            "args": ["${file}"],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "type": "shell",
            "label": "Run Current C++ File",
            "command": "g++",
            "args": ["-g", "${file}", "-o", "${fileBasenameNoExtension}.exe"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$gcc"],
            "dependsOrder": "sequence"
        },
        {
            "type": "shell",
            "label": "Quick Run C++ (Integrated Terminal)",
            "command": "powershell",
            "args": ["-ExecutionPolicy", "Bypass", "-File", "${workspaceFolder}\\run.ps1", "${file}"],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}